{
  "name": "pbr-mvp",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "db:setup": "cd packages/database && ./scripts/setup.sh",
    "db:reset": "cd packages/database && ./scripts/reset.sh",
    "db:generate": "cd packages/database && npm run generate",
    "db:studio": "cd packages/database && npm run studio"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "turbo": "^1.10.12",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.58.0",
    "drizzle-orm": "^0.44.6",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.7",
    "zod": "^4.1.11"
  }
}
